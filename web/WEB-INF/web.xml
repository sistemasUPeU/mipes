<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.upeu.mipes.controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>com.upeu.mipes.controller.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroControl</servlet-name>
        <servlet-class>com.upeu.mipes.controller.RegistroControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CRUDControl</servlet-name>
        <servlet-class>com.upeu.mipes.controller.CRUDControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReporteControl</servlet-name>
        <servlet-class>com.upeu.mipes.controller.ReporteControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainControl</servlet-name>
        <servlet-class>com.upeu.mipes.controller.MainControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>com.upeu.mipes.controller.LoginControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroControl</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CRUDControl</servlet-name>
        <url-pattern>/crud</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReporteControl</servlet-name>
        <url-pattern>/rep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainControl</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <!-- Missing login -->
        <error-code>401</error-code>
        <location>/vistas/error/errorUnauthorized.html</location>
    </error-page>
    <error-page>
        <!-- Forbidden directory listing -->
        <error-code>403</error-code>
        <location>/vistas/error/errorServer.html</location>
    </error-page>
    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/vistas/error/error404.html</location>
    </error-page>
    <error-page>
        <!-- Uncaught exception -->
        <error-code>500</error-code>
        <location>/vistas/error/errorServer.html</location>
    </error-page>
    <error-page>
        <!-- Unsupported servlet method -->
        <error-code>503</error-code>
        <location>/vistas/error/errorServer.html</location>
    </error-page>
</web-app>
